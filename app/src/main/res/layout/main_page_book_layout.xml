<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="190dp"
    android:elevation="5dp"
    android:layout_margin="5dp"
    android:background="@color/light">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/book_layout_stroke">


        <ImageView
            android:id="@+id/BookImageMainPage"
            android:layout_width="100dp"
            android:layout_height="170dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_book" />

        <TextView
            android:id="@+id/BookNameMainPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/nexa_bold"
            android:textSize="12sp"
            android:text="Book name"
            android:textColor="@color/blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/BookImageMainPage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/AuthorNameMainPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/blue"
            android:fontFamily="@font/nexa_light"
            android:text="Author Name"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/BookImageMainPage"
            app:layout_constraintTop_toBottomOf="@+id/BookNameMainPage" />

        <TextView
            android:id="@+id/discountAmountMainPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexa_light"
            android:layout_marginTop="16dp"
            android:text="dis_amount"
            android:textColor="@color/blue"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/BookImageMainPage"
            app:layout_constraintTop_toBottomOf="@+id/AuthorNameMainPage" />

        <TextView
            android:id="@+id/mainPagePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nexa_bold"
            android:text="Price"
            android:textSize="12sp"
            android:textColor="@color/blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/BookImageMainPage"
            app:layout_constraintTop_toBottomOf="@+id/discountAmountMainPage" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>