<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        >

        <TextView
            android:id="@+id/siparis_detayi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="201dp"
            android:layout_marginBottom="25dp"
            android:layout_weight="1"
            android:fontFamily="@font/nexa_bold"
            android:text="Sipariş Detayı"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/oderDetailBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:layout_toStartOf="@+id/siparis_detayi"
            app:srcCompat="@drawable/ic_arrow_back_dark" />


    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_below="@+id/top"
        android:id="@+id/cardViewId"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/order_detail_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cart_product_photo"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="57dp"
                android:layout_marginRight="-338dp"
                android:layout_marginBottom="35dp"
                android:layout_toEndOf="@+id/order_detail_photo"
                android:layout_toRightOf="@id/order_detail_photo"
                android:ellipsize="end"
                android:fontFamily="@font/nexa_bold"
                android:gravity="center"
                android:maxLines="1"
                android:text="Product Name"
                android:textColor="@color/blue"
                android:textSize="15sp">

            </TextView>

            <ImageView
                android:id="@+id/order_detail_photo"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="43dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp">

            </ImageView>

            <TextView
                android:id="@+id/order_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/order_detail_name"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="108dp"
                android:layout_marginBottom="-34dp"
                android:fontFamily="@font/nexa_bold"
                android:text="Product Price"
                android:textColor="@color/blue"
                android:textSize="15sp">

            </TextView>

            <TextView
                android:id="@+id/order_detail_date"
                android:layout_width="363dp"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="165dp"
                android:fontFamily="@font/nexa_bold"
                android:text="Tarih"
                android:textColor="@color/orange"
                android:textSize="20sp">

            </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardViewId"
        android:layout_marginTop="7dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="378dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_url="REPLACE_JSON_URL" />


    </RelativeLayout>


</RelativeLayout>
